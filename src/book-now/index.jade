                                    .col-24
                                        input.book-now__form__input(type="" placeholder="Email")
                                    .col-24
                                        input.book-now__form__input(type="" placeholder="Fecha de Nacimiento")
                                    .col-24.col-md-12
                                        input.book-now__form__input(type="" placeholder="Check In")
                                    .col-24.col-md-12
